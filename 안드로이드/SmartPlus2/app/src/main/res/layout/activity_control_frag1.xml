<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="40px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWER"
            android:textColor="#000000"
            android:textSize="50px"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/sw_frag1_power"

            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_frag1_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="540px"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_frag1_tup"
                android:layout_width="220px"
                android:layout_height="220px"
                android:layout_margin="30px"

                android:src="@drawable/n_up" />

            <TextView
                android:id="@+id/tv_frag1_temper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="#ff457eff"
                android:textSize="300px" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망온도"
                android:textColor="#000000"
                android:textSize="60px" />

            <ImageView
                android:id="@+id/bt_frag1_tdown"
                android:layout_width="220px"
                android:layout_height="220px"
                android:layout_margin="30px"

                android:src="@drawable/n_down" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="540px"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="220px"                android:id="@+id/bt_frag1_pup"

                android:layout_height="220px"
                android:layout_margin="30px"

                android:src="@drawable/n_up" />
            <TextView
                android:id="@+id/tv_frag1_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ff457eff"
                android:textSize="300px" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망세기"
                android:textColor="#000000"
                android:textSize="60px" />

            <ImageView
                android:id="@+id/bt_frag1_pdown"
                android:layout_width="220px"
                android:layout_height="220px"
                android:layout_margin="30px"

                android:src="@drawable/n_down" />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="40px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUICK REMOTE"
            android:textColor="#000000"
            android:textSize="50px"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/sw_frag1_quick"

            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>