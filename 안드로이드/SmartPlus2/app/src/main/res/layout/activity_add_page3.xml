<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="seose.com.sam.AddPage3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/in_main_titlebar"
            layout="@layout/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_addpage3_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="원격 제어 할 제어기를\n설정하세요"
            android:textColor="#ff0094b0"
            android:textSize="100px" />

        <ListView
            android:id="@+id/lv_addpage3_list"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="10px" />

        <LinearLayout
            android:id="@+id/ll_addpage3_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="70px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="전원\n버튼"
                    android:textColor="#000000"
                    android:textSize="60px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/nz_dotdotdot" />


                <TextView
                    android:id="@+id/tv_addpage3_bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#ff0094b0"
                    android:textSize="80px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="온도\n증가"
                    android:textColor="#000000"
                    android:textSize="60px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/nz_dotdotdot" />


                <TextView
                    android:id="@+id/tv_addpage3_bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textColor="#ff0094b0"
                    android:textSize="80px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="온도\n감소"
                    android:textColor="#000000"
                    android:textSize="60px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/nz_dotdotdot" />


                <TextView
                    android:id="@+id/tv_addpage3_bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="#ff0094b0"
                    android:textSize="80px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="세기\n증가"
                    android:textColor="#000000"
                    android:textSize="60px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/nz_dotdotdot" />


                <TextView
                    android:id="@+id/tv_addpage3_bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textColor="#ff0094b0"
                    android:textSize="80px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="세기\n감소"
                    android:textColor="#000000"
                    android:textSize="60px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/nz_dotdotdot" />


                <TextView
                    android:id="@+id/tv_addpage3_bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textColor="#ff0094b0"
                    android:textSize="80px" />
            </LinearLayout>


        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="설정완료"
            android:id="@+id/bt_addpage3_next"
            android:layout_marginTop="50px"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>



    <LinearLayout



        android:id="@+id/ll_addpage3_recever"
        android:layout_width="1000px"
        android:layout_height="1020px"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="985px"
            android:layout_height="1005px"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="버튼에 연결될\n식별자를 설정하세요"
            android:layout_marginBottom="100px"
            android:textColor="#ff0094b0"
            android:textSize="100px" />

        <LinearLayout
            android:layout_width="800px"
            android:layout_height="600px"

            android:gravity="center_horizontal"
            android:background="@drawable/nz_recever"
            >

        <TextView
            android:id="@+id/tv_addpage3_bta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:gravity="center_horizontal"
            android:text="A"
            android:textColor="#000000"
            android:textSize="120px" />

        <TextView
            android:id="@+id/tv_addpage3_btb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:gravity="center_horizontal"
            android:text="B"
            android:textColor="#000000"
            android:textSize="120px" />

        <TextView
            android:id="@+id/tv_addpage3_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="C"
            android:textSize="120px" />

        <TextView
            android:id="@+id/tv_addpage3_btd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:gravity="center_horizontal"
            android:text="D"
            android:textSize="120px" />

        <TextView
            android:id="@+id/tv_addpage3_bte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="E"
            android:textSize="120px" />

        </LinearLayout>
    </LinearLayout>


    </LinearLayout>



</RelativeLayout>
